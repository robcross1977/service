{
  "name": "auth-service",
  "version": "0.0.0",
  "description": "The service used to authenticate users and retrieve a token",
  "author": "Robert Crossland",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "NODE_ENV=dev ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrate:gen": "NODE_ENV=dev ts-node -r tsconfig-paths/register node_modules/.bin/typeorm migration:generate",
    "migrate:up": "NODE_ENV=dev ts-node -r tsconfig-paths/register node_modules/.bin/typeorm migration:run",
    "migrate:down": "NODE_ENV=dev ts-node -r tsconfig-paths/register node_modules/.bin/typeorm migration:revert"
  },
  "dependencies": {
    "@murderbeard/xmpp": "git+ssh://git@github.com/robcross1977/xmpp.git",
    "@nestjs/common": "^5.6.2",
    "@nestjs/core": "^5.6.2",
    "@nestjs/jwt": "^0.2.1",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/swagger": "^2.5.1",
    "@nestjs/typeorm": "^5.2.2",
    "@types/dotenv": "^6.1.0",
    "aws-sdk": "^2.395.0",
    "bcrypt": "^3.0.3",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "dotenv": "^6.2.0",
    "email-validator": "^2.0.4",
    "moment": "^2.24.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "pg": "^7.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.2",
    "rxjs": "^6.4.0",
    "shortid": "^2.2.14",
    "typeorm": "^0.2.12",
    "typescript": "^3.2.4"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.6.2",
    "@types/aws-sdk": "^2.7.0",
    "@types/bcrypt": "^3.0.0",
    "@types/email-validator": "^1.0.6",
    "@types/express": "^4.16.1",
    "@types/jest": "^23.3.13",
    "@types/moment": "^2.13.0",
    "@types/node": "^10.12.19",
    "@types/passport-jwt": "^3.0.1",
    "@types/shortid": "0.0.29",
    "@types/supertest": "^2.0.5",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.16.1",
    "supertest": "^3.4.2",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
